<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".studentorders">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your Orders"

        android:layout_marginVertical="10dp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="32sp"/>
 <androidx.cardview.widget.CardView
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     app:cardElevation="11dp"
     android:visibility="invisible"
     android:layout_marginHorizontal="10dp"
     android:layout_marginVertical="10dp"
     android:id="@+id/acceptedcard"
     app:cardCornerRadius="11dp"
     >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="your order has been accepted"
           android:textSize="20sp"
           android:paddingHorizontal="10dp"
           android:textColor="#03A9F4"
           android:id="@+id/accepted"
           android:layout_marginVertical="20dp"
           android:textStyle="bold"/>
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:src="@drawable/right"/>
   </LinearLayout>
 </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardElevation="11dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/printedcard"
        android:visibility="invisible"
        app:cardCornerRadius="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="your order has been printed"
                android:textSize="20sp"
                android:textColor="#03A9F4"
                android:id="@+id/printed"
                android:layout_marginVertical="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/right"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardElevation="11dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/deliveredcard"
        app:cardCornerRadius="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="your order has been delivered"
                android:textSize="20sp"
                android:textColor="#03A9F4"
                android:id="@+id/delivered"
                android:layout_marginVertical="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/right"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No orders"
        android:layout_gravity="center"
        android:id="@+id/no"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="32sp"
        android:visibility="visible"
        android:layout_marginVertical="80dp"/>

</LinearLayout>